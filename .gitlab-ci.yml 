image: golang:1.10

variables:
  REPO_NAME: github.com/terraform-providers/terraform-provider-ovc

before_script:
  - mkdir -p $GOPATH/src/$(dirname $REPO_NAME)
  - ln -svf $CI_PROJECT_DIR $GOPATH/src/$REPO_NAME
  - cd $GOPATH/src/$REPO_NAME
  - ls
  - pwd
  - go get -d ./...

stages:
    - test
    - build

format:
    stage: test
    script:
      - go fmt $(go list ./... | grep -v /vendor/)
      - go vet $(go list ./... | grep -v /vendor/)
      - go test -race $(go list ./... | grep -v /vendor/)
    only: 
      - master

compile:
    stage: build
    script:
      - env GOOS=linux GOARCH=amd64 go build -o terraform-provider-ovc-linux .
      - env GOOS=darwin GOARCH=amd64 go build -o terraform-provider-ovc-mac .
    artifacts:
      paths:
        - terraform-provider-ovc-linux
        - terraform-provider-ovc-mac
    only: 
      - master
